<form action="/blog/add-post" method="POST" enctype="multipart/form-data">
  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post Title" name="title" required />

  <label for="description"><b>Description</b></label>
  <textarea
    id="textarea-description"
    name="description"
    cols="50"
    rows="3"
    placeholder="Une courte description"
    required
  ></textarea>

  <label for="body"><b>Content</b></label>
  <textarea
    id="textarea-body"
    name="body"
    cols="50"
    rows="10"
    placeholder="Votre article ici"
    required
  ></textarea>
  <emoji-picker id="emoji-picker">Chargement...</emoji-picker>

  <!-- Zone d'upload des images d'illustration -->
  <div class="product-info">
    <!-- Zone d'affichage des images d'illustration -->
    <div class="product-image">
      <p class="text">Images d'illustration</p>
    </div>
    <!-- upload section -->
    <div class="upload-image-sec">
      <p class="text"><img src="../img/camera.png" alt="" />Upload image</p>
      <div class="upload-catalouge">
        <div class="upload-wrapper">
          <input
            type="file"
            class="fileupload"
            id="first-file-upload-btn"
            hidden
            accept="image/png, image/jpeg"
            name="illustrationImages"
          />
          <label for="first-file-upload-btn" class="upload-image">
            <button class="delete-image" data-index="0" hidden>
              <img src="../img/close.png" alt="" />
            </button>
          </label>
        </div>

        <div class="upload-wrapper">
          <input
            type="file"
            class="fileupload"
            id="second-file-upload-btn"
            hidden
            accept="image/png, image/jpeg"
            name="illustrationImages"
          />
          <label for="second-file-upload-btn" class="upload-image">
            <button class="delete-image" data-index="1" hidden>
              <img src="../img/close.png" alt="" />
            </button>
          </label>
        </div>

        <div class="upload-wrapper">
          <input
            type="file"
            class="fileupload"
            id="third-file-upload-btn"
            hidden
            accept="image/png, image/jpeg"
            name="illustrationImages"
          />
          <label for="third-file-upload-btn" class="upload-image">
            <button class="delete-image" data-index="2" hidden>
              <img src="../img/close.png" alt="" />
            </button>
          </label>
        </div>

        <div class="upload-wrapper">
          <input
            type="file"
            class="fileupload"
            id="fourth-file-upload-btn"
            hidden
            accept="image/png, image/jpeg"
            name="illustrationImages"
          />
          <label for="fourth-file-upload-btn" class="upload-image">
            <button class="delete-image" data-index="3" hidden>
              <img src="../img/close.png" alt="" />
            </button>
          </label>
        </div>
      </div>
    </div>
  </div>

  <!-- l'image est chargÃ©e dans '<div class="div-banner" ... >' par 'editor.js' de 'admin.ejs'. -->
  <div class="div-banner" id="banner-edit">
    <input
      type="file"
      accept="image/*"
      id="banner-upload"
      name="bannerImage"
      hidden
      required
    />
    <label for="banner-upload" class="banner-upload-btn">
      <img src="/img/upload.png" alt="upload banner" />
    </label>
  </div>

  <input type="submit" value="Add" class="btn" />
  <button
    formaction="/blog/preview-addpost"
    formmethod="POST"
    class="btn btn-preview"
  >
    Preview
  </button>
  <!-- <button class="btn btn-close" onclick="window.history.back()">Cancel</button> -->

  <a href="/blog/dashboard" class="btn">Cancel</a>
</form>
